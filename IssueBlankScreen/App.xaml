<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IssueBlankScreen"
             x:Class="IssueBlankScreen.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="ColorPrimary">#222222</Color>
            <Color x:Key="PrimaryTextColor">Black</Color>
            <Color x:Key="ColorPrimaryDark">#080808</Color>
            <Color x:Key="ColorAccent">#337AB7</Color>
            <Color x:Key="ColorBlack">#000000</Color>
            <Color x:Key="ColorGray">#262626</Color>
            <Color x:Key="ColorWhite">#ffffff</Color>

            <Style TargetType="Page" ApplyToDerivedTypes="True">
                <Setter Property="Padding" Value="0"/>
            </Style>
            <Style TargetType="ScrollView">
                <Setter Property="VerticalScrollBarVisibility"
                Value="Never"/>
                <Setter Property="HorizontalScrollBarVisibility"
                Value="Never"/>
            </Style>
            <Style TargetType="BoxView">
                <Setter Property="BackgroundColor" Value="Transparent"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>